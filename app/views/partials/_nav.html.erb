<div class="contain-to-grid">
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
         <%= link_to image_tag('PPPH_Logo.png'), home_path %>
        </li>
      </ul>
      <section class="top-bar-section">
        <% if logged_in? %>
        <ul class="left">
     
          <li class="has-dropdown">
            <%= link_to "Clients", clients_path %>
            <ul class="dropdown">
              <li><%= link_to "List Clients", clients_path %></li>
              <li><%= link_to "Add a Client", new_client_path %></li>
            </ul>
          </li>

          <li class="has-dropdown">
            <%= link_to "Locations", locations_path %>
            <ul class="dropdown">
              <li><%= link_to "List Locations", locations_path %></li>
              <li><%= link_to "Add a Location", new_location_path %></li>
            </ul>
          </li>

          <li class="has-dropdown">
            <%= link_to "Visits", visits_path %>
            <ul class="dropdown">
              <li><%= link_to "List Visits", visits_path %></li>
              <li><%= link_to "Add a Visit", new_visit_path %></li>
            </ul>
          </li>

          <li class="has-dropdown">
            <%= link_to "Exchanges", exchanges_path %>
            <ul class="dropdown">
              <li><%= link_to "List Exchanges", exchanges_path %></li>
              <li><%= link_to "Add an Exchange", new_visit_path %></li>
            </ul>
          </li>
          <% if current_user.role == "admin" %>
          <li class="has-dropdown">
            <%= link_to "Reports", generate_path %>
            <ul class="dropdown">
              <li><%= link_to "Generate Reports", generate_path %></li>
            </ul>
          </li>
          <% end%>
        </ul>
        <% end %>
        <% if logged_in? %>
          <ul class="right">
            <li class="has-dropdown">
            <%= link_to "Welcome, #{current_user.first_name}", user_path(current_user) %>
            <ul class="dropdown">
              <li><%= link_to "Edit settings", edit_user_path(current_user) %></li>
              <li><%= link_to "View profile", current_user %></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
        <% else %>
          <ul class="right">
            <li>
              <%= link_to "Login", login_path %>
            </li>
          </ul>
        <% end %>
      </section>
    </nav>
  </div>